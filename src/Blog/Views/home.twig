{% extends'layout.twig' %}

{% block content %}
<div class="row">
    <div class="col-12">
        <h1 class="text-center">Blog con PHP y PHP-DI utilizando Twig</h1>
    </div>
</div>
    <div class="row">
        <div class="col-6 ms-auto me-auto">
            <h4 class="text-center mt-4 mb-3">Listado de art√≠culos</h4>

            {% for article in articles %}
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="{{ article.image }}" alt="Imagen">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">{{ article.title }}</h5>
                                <p class="card-text">{{ article.content }}</p>
                                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                                <a href="articulo/{{ article.id }}" class="card-link text-decoration-none">Leer mas</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}



        </div>
    </div>


{% endblock %}